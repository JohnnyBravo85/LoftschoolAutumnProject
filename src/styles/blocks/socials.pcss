.socials {
  display: flex;
}

.socials__item {
  &:hover .socials__icon {
    fill: $hover-color;
  }
}

.socials__link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.socials__icon {
  width: 25px;
  fill: $social-icons-color;
  transition: fill ease-in-out 0.5s;
}