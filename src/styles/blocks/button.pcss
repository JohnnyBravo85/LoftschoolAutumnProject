.button {
  padding: 35px 120px;
  font-size: 18px;
  font-weight: bold;
  color: $button-text-color;
  background-image: linear-gradient($button-bg-color);
  transition: background-image ease-in-out .5s;
  &:hover {
    background-image: linear-gradient($button-bg-hover-color);
  }
  @include phones {
    padding: 35px 70px;
    width: 100%;
  }
}